<header class="bg-white shadow-sm sticky top-0 z-50">
	<nav class="container mx-auto px-4 py-4 md:py-6">
		<div class="flex items-center justify-between">
			<!-- Logo -->
			<div class="flex items-center">

				<div class="max-w-md mx-auto">
				<img 
					src="/images/ArteCleanLogo.svg" 
					alt="Our team"
					class="w-full h-4 object-cover"
				/>
				</div>
			</div>
			
			<!-- Desktop Navigation -->
			<div class="hidden md:flex items-center space-x-8">
				<a href="#services" class="text-neutral-700 hover:text-secondary transition-colors font-medium">
					Services
				</a>
				<a href="#contact" class="bg-accent text-white px-6 py-2 rounded-lg hover:bg-accent-dark transition-colors font-medium">
					Contact Us
				</a>
			</div>
			
			<!-- Mobile Menu Button -->
			<button 
				id="mobile-menu-button"
				class="md:hidden text-neutral-700 hover:text-secondary focus:outline-none"
				aria-label="Toggle menu"
			>
				<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
			</button>
		</div>
		
		<!-- Mobile Navigation -->
		<div id="mobile-menu" class="hidden md:hidden mt-4 pb-4">
			<div class="flex flex-col space-y-4">
				<a href="#services" class="text-neutral-700 hover:text-secondary transition-colors font-medium">
					Services
				</a>
				<a href="#contact" class="bg-accent text-white px-6 py-2 rounded-lg hover:bg-accent-dark transition-colors font-medium text-center">
					Contact Us
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	const mobileMenuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	mobileMenuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
	
	// Close mobile menu when clicking on a link
	const mobileLinks = mobileMenu?.querySelectorAll('a');
	mobileLinks?.forEach(link => {
		link.addEventListener('click', () => {
			mobileMenu?.classList.add('hidden');
		});
	});
</script>